\draw[red] (2.5,0) --node[below]{\(\Delta x =3\)}(2.5,0);
\draw[red] (2.5,1.5) --node[above right]{\(m=\frac{-3}{3}=-1\)}(2.5,1.5);\end{tikzpicture}]]>
