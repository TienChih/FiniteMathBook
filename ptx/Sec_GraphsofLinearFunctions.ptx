\draw[gray!50, thin, step=1] (-1,-1) grid (5,5);
\draw[very thick,->] (-1,0) -- (5.1,0) node[right] {\(x\)};
\draw[very thick,->] (0,-1) -- (0,5.1) node[above] {\(y\)};
